{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./app/.nuxt/tsconfig.json",

  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@utils/*": ["./utils/*"],
      "@components/*": ["./components/*"],
      "types": ["class-variance-authority"]
    },
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "types": [
      "@pinia/nuxt",
      "@nuxtjs/tailwindcss",
      "@prisma/client",
      "nuxt-icon"
    ]
  }
}
